<!-- NOTA: Hacer que el area clickeable sea la box, no la image-box  -->
<div class="container">

    <div class="page-title">
      <div class="column">
        <h1>Restaurants</h1>

        <div class="searchBar">
          <form action="/restaurants/search">
            <input class="home-ipt search-field"
                  type="text" name="term" 
                  placeholder="Search for a restaurant" />

            <% if (!restaurantList.length) { %>
              <input class="home-ipt home-btn" type="submit" value="Reset">
            <% } else {%>
              <input class="home-ipt home-btn" type="submit" value="Search">
            <% } %>
          </form>
        </div>
      </div>
    </div>

    <hr>

    <div><a style="position: relative; top: 10px; left: 42%; height: 30px;" href="<%- showMapPath %>">Buscar por ubicaci√≥n en mapa</a></div>
    <div class="row-wrap-list">
      <% if (!restaurantList.length) { %>
        <p>No results </p>
      <% } else {%>

        <% for (let i = 0; i < restaurantList.length; i += 1) { 
          restaurant = restaurantList[i];
          let image = restaurant.image %>
          <div class="box">
            <area class="image-box" style="background-image:url('<%- image %>');" href="<%- showRestaurantPath(restaurant) %>"/>

            <div class="in-box-footer">
              <a href="<%- showRestaurantPath(restaurant) %>"><%- restaurant.name %></a>
              <%- restaurant.score %>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  
  </div> 